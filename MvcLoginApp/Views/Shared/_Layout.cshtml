@using MvcLoginApp.Common_Classes
@{
    var ServerPath = string.Format("{0}://{1}:{2}{3}", Request.Url.Scheme, Request.Url.Host, Request.Url.Port, (Request.ApplicationPath == "/" ? "" : Request.ApplicationPath));
}
<style>
    /*modified original boostrap classes*/
    body {
        padding-top: 0px !important;
        padding-bottom: 0px !important;
    }

    .lblheader {
        font-size: 20px;
        margin-top: 5px;
        color: white
    }

    .divbody {
        background-color: white;
    }
    .lblUserName {
        font-size: 15px;
        color: white;
        margin-top: 9px;
    }
</style>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - Tatvabook</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
