    <input type="hidden" id="hdnServerPathForJS" value="@ServerPath.ToString()" />
    <div class="container-fluid" style="background-color:#3b5998">
        <div class="row">
            <div class="col-lg-4" style="text-align:center">

                <label class="lblheader">TatvaBook</label>
            </div>
            <div class="col-lg-offset-8" >
                <label class="lblUserName">@ProjectSession.UserName </label>
            </div>
        </div>
    </div>
    <div class="container-fluid" style="background-color:whitesmoke">
        @*<div class="col-lg-1">
            </div>*@
        <div class="col-lg-2">
            <div class="col-sm-offset-4">
                <div>
                    <ul class="nav flex-column">
                        <li class="nav-item">@Html.ActionLink("News Feed", "GetUserPost", "NewsFeed")</li>
                        <li class="nav-item">@Html.ActionLink("Find Friends", "Index", "Home")</li>
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                        <li class="nav-item">@Html.ActionLink("Send Request", "RequestedList", "Home")</li>
                        <li class="nav-item">@Html.ActionLink("Log Out", "Index", "Login")</li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="col-lg-6 divbody">
            <div class="">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        </div>
        <div class="col-lg-4" style="background-color:white;">
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
